<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/fastscroller_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fastscroller_indexer"
        android:gravity="center"
        android:padding="@dimen/fastscroller_indexer_corner_round"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/fastscroller_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fastscroller_track_width"
        android:layout_marginRight="@dimen/fastscroller_track_width"
        android:src="@drawable/fastscroller_track" />

</LinearLayout>